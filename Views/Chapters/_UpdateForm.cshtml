@model ChapterViewModel

<form asp-action="Update" id="form-action" method="post" class="form-horizontal border" role="form">

<div class="border">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Chapter.Title" class="form-label"></label>
            <input asp-for="Chapter.Id" type="hidden" class="form-control" />
            <input asp-for="Chapter.Title" class="form-control" />
        </div>
    </div>
     <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Chapter.Body" class="form-label"></label>
            <input asp-for="Chapter.Body" class="form-control" />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
            <input type="submit" id="form-button" class="btn btn-success" value="Update Chapter" />
        </div>
    </div>
    </div>

</form>