@model ChapterViewModel

<div class="Chapter">
    <h2>@Model.Chapter.Title</h2>
    
    <p>@Model.Chapter.Body</p>
</div>

<div class="post-actions">
  <ul>
    <li><a class="btn btn-primary" asp-area="" asp-controller="Chapters" asp-action="EditChapter" asp-route-id="@Model.Chapter.Id">Update</a></li>
    <li><input type="submit" class="btn btn-danger" value="Delete" onClick="deleteChapter(@Model.Chapter.Id)" /></li>
  </ul>
</div>