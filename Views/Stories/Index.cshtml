@model StoriesViewModel
@{
    ViewData["Title"] = "Stories Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Stories</h1>
   </div>

   <div class="text-right">
    <a asp-controller="Stories" asp-action="NewStory">New Story</a>
</div>

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <div class="posts-containter">
            @foreach(var story in Model.Stories)
            {
                 <div class="story border">
                    <h2><a asp-controller="Stories" asp-action="StoryDetail" asp-route-id="@story.Id">@story.Title</a></h2>
                    
                 </div>
            }
            </div>
    </div>
</div>